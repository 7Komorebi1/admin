<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:layout_marginRight="56dp"
    android:background="#546E7A"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="232dp"
        android:background="@drawable/cehualan"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="50dp"
        >

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/iv_avatar"

            android:id="@+id/imageView2" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parName"
                android:lineSpacingExtra="5dp"
                android:textColor="#ffffff" android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button android:id="@+id/btn_head" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="首页" android:textColor="#000"/>

            <Button android:id="@+id/btn_person" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"

                android:text="个人中心" android:textColor="#000"/>

            <Button android:id="@+id/btn_find" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="活动查找" android:textColor="#000"/>

            <Button android:id="@+id/btn_notice" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="通知"
                android:textColor="#000000" />

            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#ffffff"
                android:id="@+id/textView2" />

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button android:id="@+id/btn_setting" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:background="#ffffff"
                android:text="设置" android:textColor="#000"
                />

            <Button android:id="@+id/btn_exit" android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="退出" android:textColor="#000"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
