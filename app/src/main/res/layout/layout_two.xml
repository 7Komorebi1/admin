<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A5C5E1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/spinner1"/>
        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/spinner2"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="筛选"/>

    </LinearLayout>
    <com.test.admin.activity.RefreshableView
        android:id="@+id/refreshable_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <ListView android:id="@+id/lv_permission"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.test.admin.activity.RefreshableView>

</LinearLayout>