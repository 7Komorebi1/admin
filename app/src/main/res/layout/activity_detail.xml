<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="horizontal"
    >

    <include layout="@layout/include_app_bar"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="@dimen/biao_z"
            android:textColor="#000000"
            android:text="活动标题"
           />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyTitle"/>
    </TableRow>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"

            android:text="活动状态"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyStatus"/>
    </TableRow>
<View
    style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="举办方"
           />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyOrganizer"/>

    </TableRow>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="开始时间"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyStartTime"/>
    </TableRow>

    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="结束时间"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyDeadLine"/>
    </TableRow>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="活动地点"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyPlace"/>
    </TableRow>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/biao_z"
            android:textColor="#000000"
            android:text="活动内容"
            />

    </TableRow>


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_marginLeft="160dp"

        android:id="@+id/acApplyContent"/>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="活动受众"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyAudiences"/>
    </TableRow>
    <View
        style="@style/viewheng"></View>
    <TableRow>
        <TextView
            style="@style/xiang"
            android:text="活动标签"
            />
        <View
            style="@style/view"
            ></View>
        <TextView android:layout_width="match_parent" android:layout_weight="1"
            android:layout_marginTop="2dp"

            android:padding="10dp"
            android:textSize="17sp"
            android:id="@+id/acApplyLabel"/>
    </TableRow>


    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="1dp"
        android:layout_height="1dp"
        android:background="#268BFF" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        >
        <TableRow>

            <Button
                android:layout_marginTop="7dp"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/actNoPass_button"
                style="@style/button"
                android:background="@drawable/button_selector"
                android:text="不通过"

                android:layout_width="150dp"
                />

            <Button
                android:layout_marginTop="7dp"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/actPass_button"
                style="@style/button"
                android:background="@drawable/button_select2"
                android:textColor="#ffffff"
                android:onClick="onClick"
                android:text="通过" />

        </TableRow>
    </TableLayout>
</TableLayout>
