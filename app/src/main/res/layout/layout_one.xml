<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="#F1F1F3"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#A5C5E1"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:padding="5dp">

        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:entries="@array/spinner1"/>
        <Spinner android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:entries="@array/spinner2"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="筛选"/>

    </LinearLayout>

    <ListView android:id="@+id/lv_activity"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

</LinearLayout>