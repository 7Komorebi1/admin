<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.admin.promulgator.PromulgatorActivityModify">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:minHeight="?attr/actionBarSize"
        >


        <TextView
            android:id="@+id/view_titile"
            android:gravity="center"
            android:text="活动详情"
            android:textSize="@dimen/biao_z"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!-- 定义返回按钮 -->

    </LinearLayout>
    <View  android:layout_height="30px"
        android:layout_width="match_parent"
        android:background="#f7f7f9"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <TableLayout
        android:id="@+id/widget0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:id="@+id/widget33"
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动标题"
                android:layout_x="50dp"
                android:layout_y="22dp"
                >
            </TextView>
            <EditText
                android:id="@+id/acTitle"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:layout_x="130dp"
                android:layout_y="12dp"
                android:layout_marginRight="58dp"
                >
            </EditText>
        </TableRow>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#747477"
            />
        <TableRow>
            <TextView
                android:id="@+id/widget34"
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举办方"
                android:layout_x="50dp"
                android:layout_y="62dp"
                >
            </TextView>
            <EditText
                android:id="@+id/acOrganizer"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"

                android:layout_marginRight="58dp"
                >
            </EditText>
        </TableRow>

    </TableLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <View  android:layout_height="30px"
        android:layout_width="match_parent"
        android:background="#f7f7f9"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/widget36"
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"

                >
            </TextView>
            <EditText
                android:id="@+id/acStartTime"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"

                android:layout_marginRight="58dp"
                >
            </EditText>

        </TableRow>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#747477"
            />
        <TableRow>
            <TextView
                android:id="@+id/widget39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:layout_x="50dp"
                android:layout_y="142dp"
                android:layout_marginLeft="48dp"
                >
            </TextView>

            <EditText
                android:id="@+id/acDeadLine"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"

                android:layout_marginRight="58dp"
                >
            </EditText>
        </TableRow>
    </TableLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <View  android:layout_height="30px"
        android:layout_width="match_parent"
        android:background="#f7f7f9"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:id="@+id/widget41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动地点"
                android:layout_x="50dp"
                android:layout_y="182dp"
                android:layout_marginLeft="48dp"
                >

            </TextView>
            <EditText
                android:id="@+id/acPlace"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:background="@null"

                >
            </EditText>
        </TableRow>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#747477"
            />
        <TableRow>
            <TextView
                android:id="@+id/widget43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动内容"

                android:layout_marginLeft="48dp"
                >
            </TextView>

            <EditText
                android:id="@+id/acContent"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:background="@null"


                >
            </EditText>
        </TableRow>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#747477"
            />
        <TableRow>
            <TextView
                android:id="@+id/widget48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动受众"
                android:layout_x="50dp"
                android:layout_y="262dp"
                android:layout_marginLeft="48dp"
                >
            </TextView>

            <EditText
                android:id="@+id/acAudiences"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textSize="15sp"
                android:layout_x="131dp"
                android:layout_y="130dp"

                >
            </EditText>
        </TableRow>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#747477"
            />
        <TableRow>
            <TextView
                android:id="@+id/widget49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推送范围"
                android:layout_x="50dp"
                android:layout_marginLeft="48dp"
                android:layout_y="302dp"
                >
            </TextView>
            <Spinner
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:id="@+id/acPushScope_1"
                android:entries="@array/xueyuan"
                />

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:id="@+id/acPushScope_2"
                android:entries="@array/grade"
                />
        </TableRow>
    </TableLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <View  android:layout_height="30px"
        android:layout_width="match_parent"
        android:background="#f7f7f9"
        />
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableRow>
            <TextView
                android:id="@+id/widget50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动标签"
                android:layout_x="50dp"
                android:layout_y="342dp"
                android:layout_marginLeft="48dp"
                >

            </TextView>
            <CheckBox
                android:layout_marginLeft="18dp"
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼品"
                android:textColor="#747477"
                android:layout_x="210dp"
                android:layout_y="342dp"
                >
            </CheckBox>
            <CheckBox
                android:layout_marginLeft="18dp"
                android:id="@+id/outdoors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户外"
                android:textColor="#747477"
                android:layout_x="50dp"
                android:layout_y="382dp"
                >
            </CheckBox>

            <CheckBox
                android:layout_marginLeft="18dp"
                android:id="@+id/official"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官方"
                android:textColor="#747477"
                android:layout_x="210dp"
                android:layout_y="382dp"
                >
            </CheckBox>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">


        <TableRow>
            <CheckBox
                android:layout_marginLeft="122dp"
                android:id="@+id/celebrity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名人"
                android:textColor="#747477"
                android:layout_x="130dp"
                android:layout_y="380dp"
                >
            </CheckBox>


            <CheckBox
                android:layout_marginLeft="18dp"
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综测"
                android:textColor="#747477"
                android:layout_x="128dp"
                android:layout_y="342dp"
                >
            </CheckBox>
        </TableRow>

    </TableLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#747477"
        />
    <Button
        android:id="@+id/modify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="#747477"
        android:layout_x="130dp"
        android:layout_y="420dp"
        >
    </Button>

</LinearLayout>
